<resources>
        <!--图片预加载，避免需要先显示主题的背景造成卡顿感-->
         <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
             <item name="android:background">@drawable/welcome_bg</item>
         </style>

        <style name="ToolbarTransparent" parent="Base.Theme">
            <item name="colorPrimary">#00000000</item>
            <item name="colorPrimaryDark">@color/material_blue_500</item>
        </style>

        <style name="AppTheme" parent="Base.Theme">
        </style>

        <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->

            <item name="android:windowBackground">@color/white</item>

            <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>

            <item name="colorPrimary">@color/material_blue_500</item>

            <item name="colorPrimaryDark">@color/material_blue_700</item>

            <item name="colorAccent">@color/material_pink_200</item>

            <item name="colorControlNormal">#ffffff</item>

        </style>

        <style name="MySearchView" parent="Widget.AppCompat.SearchView"/>

        <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">

            <item name="color">@android:color/white</item>
        </style>

        <style name="MyToobar" parent="ThemeOverlay.AppCompat.Light">

            <item name="android:title">App Title</item>

        </style>

    <!-- 对话框的样式-->
        <style name="CustomDialog" parent="AlertDialog.AppCompat.Light">
            <item name="android:windowBackground">@drawable/dialog_bg</item>
            <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
            <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
            <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:backgroundDimEnabled">true</item>
            <item name="android:backgroundDimAmount">0.4</item>
        </style>

    <style name="MyTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="MyEditText" parent="Base.V7.Widget.AppCompat.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:drawableEnd">@drawable/icon_edittext_drop</item>
        <item name="android:drawableRight">@drawable/icon_edittext_drop</item>
        <item name="android:textColorHint">#99ffffff</item>

    </style>

    <style name="myEditTextNoIcon" parent="Base.V7.Widget.AppCompat.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <!-- 一系列大文字-->
    <style name="my_tv_message_large">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>

    </style>

    <!--一系列小文字-->
    <style name="my_tv_message_small">

        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#a7a7a7</item>

    </style>

    <!-- 中等大小文字-->
    <style name="my_tv_message_middle">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a7a7a7</item>
        <item name="android:singleLine">true</item>

    </style>

</resources>
